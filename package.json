{
  "name": "@virgilsecurity/keyknox",
  "version": "0.1.1",
  "description": "Keyknox SDK allows developers to communicate with Virgil Keyknox Service to upload, download, and synchronize encrypted sensitive data (private keys) between different devices.",
  "main": "./dist/keyknox.node.cjs.js",
  "module": "./dist/keyknox.node.es.js",
  "browser": {
    "./dist/keyknox.node.cjs.js": "./dist/keyknox.browser.cjs.js",
    "./dist/keyknox.node.es.js": "./dist/keyknox.browser.es.js"
  },
  "typings": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/VirgilSecurity/keyknox-javascript",
  "author": "Virgil Security Inc. <support@virgilsecurity.com>",
  "license": "BSD-3-Clause",
  "scripts": {
    "test": "jest",
    "clean": "rimraf .rpt2_cache .virgil_key_entries coverage dist",
    "build:node:cjs": "cross-env ENV=node FORMAT=cjs rollup -c",
    "build:node:es": "cross-env ENV=node FORMAT=es rollup -c",
    "build:node": "npm run build:node:cjs && npm run build:node:es",
    "build:browser:cjs": "cross-env ENV=browser FORMAT=cjs rollup -c",
    "build:browser:es": "cross-env ENV=browser FORMAT=es rollup -c",
    "build:browser:umd": "cross-env ENV=browser FORMAT=umd rollup -c",
    "build:browser:umd:min": "cross-env ENV=browser FORMAT=umd MINIFY=true rollup -c",
    "build:browser": "npm run build:browser:cjs && npm run build:browser:es && npm run build:browser:umd && npm run build:browser:umd:min",
    "build": "npm run build:node && npm run build:browser",
    "prepare": "npm run clean && npm run build",
    "lint": "tslint --project tsconfig.json",
    "prettier": "prettier 'src/**/*.ts' --write",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "setupTestFrameworkScriptFile": "./jest.setup.js",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "axios": "^0.18.0"
  },
  "peerDependencies": {
    "virgil-crypto": "^3.0.0",
    "virgil-sdk": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/uuid": "^3.4.3",
    "buffer-es6": "^4.9.3",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-inject": "^2.2.0",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-typescript2": "^0.16.1",
    "rollup-plugin-uglify": "^4.0.0",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.1",
    "uuid": "^3.3.2",
    "virgil-crypto": "^3.0.0",
    "virgil-sdk": "^5.0.0"
  }
}
