{
  "name": "keyknox-sdk",
  "version": "1.0.0",
  "description": "Keyknox SDK",
  "main": "dist/keyknox-sdk.cjs.js",
  "module": "dist/keyknox-sdk.es.js",
  "typings": "dist/types/index.d.ts",
  "repository": "https://github.com/VirgilSecurity/keyknox-javascript",
  "author": "Virgil Security Inc. <support@virgilsecurity.com>",
  "license": "BSD-3-Clause",
  "scripts": {
    "test": "jest",
    "clean": "rimraf .rpt2_cache .virgil_key_entries coverage dist",
    "build:cjs": "cross-env NODE_ENV=cjs rollup -c",
    "build:es": "cross-env NODE_ENV=es rollup -c",
    "build": "npm run build:cjs && npm run build:es",
    "prepare": "npm run clean && npm run build",
    "lint": "tslint --project tsconfig.json",
    "prettier": "prettier 'src/**/*.ts' --write",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "setupTestFrameworkScriptFile": "./jest.setup.js",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "axios": "^0.18.0"
  },
  "peerDependencies": {
    "virgil-crypto": "^3.0.0-alpha.14",
    "virgil-sdk": "VirgilSecurity/virgil-sdk-javascript#private-key-storage"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/uuid": "^3.4.3",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "rollup": "^0.63.4",
    "rollup-plugin-typescript2": "^0.16.1",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.9.2",
    "uuid": "^3.3.2",
    "virgil-crypto": "^3.0.0-alpha.14",
    "virgil-sdk": "VirgilSecurity/virgil-sdk-javascript#private-key-storage"
  }
}
